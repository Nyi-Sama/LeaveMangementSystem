@model CreateVM;

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">Create Leave Type</h2>
        <small class="text-muted">
            Define a new leave category and allowed days
        </small>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                <!-- Name -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name"
                           class="form-control form-control-lg"
                           placeholder="e.g. Annual Leave" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <!-- Number of Days -->
                <div class="mb-4">
                    <label asp-for="NumberOfDays" class="form-label fw-semibold"></label>
                    <input asp-for="NumberOfDays"
                           class="form-control form-control-lg"
                           placeholder="e.g. 14" />
                    <span asp-validation-for="NumberOfDays" class="text-danger small"></span>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        ← Back
                    </a>

                    <button type="submit" class="btn btn-primary px-4">
                        Create Leave Type
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
