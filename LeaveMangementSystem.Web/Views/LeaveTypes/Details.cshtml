@model DetailsVM

@{
    ViewData["Title"] = $"{Model.Name} Details";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold mb-1">@Model.Name Details</h2>
        <small class="text-muted">Overview of selected leave configuration</small>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <div class="row mb-4">
                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">
                        @Html.DisplayNameFor(model => model.Name)
                    </small>
                    <h5 class="fw-semibold mb-0">
                        @Html.DisplayFor(model => model.Name)
                    </h5>
                </div>

                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">
                        @Html.DisplayNameFor(model => model.NumberOfDays)
                    </small>
                    <h5 class="fw-semibold mb-0">
                        @Html.DisplayFor(model => model.NumberOfDays) days
                    </h5>
                </div>
            </div>

            <hr />

            <!-- Actions -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    ← Back to List
                </a>

                <a asp-action="Edit" asp-route-id="@Model?.Id"
                   class="btn btn-primary px-4">
                    Edit
                </a>
            </div>

        </div>
    </div>
</div>

