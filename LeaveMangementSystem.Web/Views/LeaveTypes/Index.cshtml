@model IEnumerable<LeaveMangementSystem.Web.Data.LeaveType>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Leave Types</h2>
            <small class="text-muted">Manage available leave categories</small>
        </div>

        <a asp-action="Create" class="btn btn-primary px-4">
            <i class="bi bi-plus-circle me-1"></i> Create New
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">

            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NumberOfDays)
                        </th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 fw-semibold">
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td>
                                <span class="badge bg-secondary">
                                    @Html.DisplayFor(modelItem => item.NumberOfDays) days
                                </span>
                            </td>

                            <td class="text-end pe-4">
                                <a asp-action="Edit" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-primary me-1">
                                    Edit
                                </a>

                                <a asp-action="Details" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-secondary me-1">
                                    Details
                                </a>

                                <a asp-action="Delete" asp-route-id="@item.Id"
                                   class="btn btn-sm btn-outline-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

