@model LeaveMangementSystem.Web.Data.LeaveType

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="mb-4">
        <h2 class="fw-bold text-danger mb-1">Delete Leave Type</h2>
        <small class="text-muted">
            This action cannot be undone. Please confirm carefully.
        </small>
    </div>

    <!-- Card -->
    <div class="card shadow-sm border-0">
        <div class="card-body p-4">

            <!-- Warning -->
            <div class="alert alert-warning d-flex align-items-center mb-4">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <span>
                    Are you sure you want to permanently delete this leave type?
                </span>
            </div>

            <!-- Details -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">
                        @Html.DisplayNameFor(model => model.Name)
                    </small>
                    <h5 class="fw-semibold mb-0">
                        @Html.DisplayFor(model => model.Name)
                    </h5>
                </div>

                <div class="col-md-6">
                    <small class="text-muted d-block mb-1">
                        @Html.DisplayNameFor(model => model.NumberOfDays)
                    </small>
                    <h5 class="fw-semibold mb-0">
                        @Html.DisplayFor(model => model.NumberOfDays) days
                    </h5>
                </div>
            </div>

            <hr />

            <!-- Actions -->
            <form asp-action="Delete" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />

                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>

                <button type="submit" class="btn btn-danger px-4">
                    Yes, Delete
                </button>
            </form>

        </div>
    </div>
</div>

